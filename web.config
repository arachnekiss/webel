<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <handlers>
      <add name="iisnode" path="server/startup.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Do not interfere with direct requests for startup.js -->
        <rule name="NodeStartupFile" stopProcessing="true">
          <match url="server/startup.js(/.*)?$" />
          <action type="None" />
        </rule>
        
        <!-- All other requests go to Node.js app -->
        <!-- Static files 처리 -->
      <rule name="StaticContent">
        <action type="Rewrite" url="{REQUEST_URI}" />
        <conditions>
          <add input="{REQUEST_FILENAME}" matchType="IsFile" />
        </conditions>
      </rule>

      <!-- 클라이언트 라우팅을 위해 /assets 경로 처리 -->
      <rule name="StaticAssets" stopProcessing="true">
        <match url="(assets/.*)" />
        <action type="Rewrite" url="{R:1}" />
      </rule>

      <!-- 클라이언트 라우팅을 위해 정적 파일 및 API 요청 패턴 정의 -->
      <rule name="API">
        <match url="api/.*" />
        <action type="Rewrite" url="server/startup.js" />
      </rule>

      <!-- 나머지 요청은 모두 server/startup.js로 라우팅 -->
      <rule name="DynamicContent">
        <conditions>
          <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
        </conditions>
        <action type="Rewrite" url="server/startup.js" />
      </rule>
      </rules>
    </rewrite>
    
    <!-- iisnode configuration -->
    <iisnode
      nodeProcessCommandLine="node"
      watchedFiles="*.js;server\*.js;shared\*.js;client\**\*.js"
      loggingEnabled="true"
      logDirectory="logs"
      debuggingEnabled="false"
      maxConcurrentRequestsPerProcess="1024"
      maxNamedPipeConnectionRetry="3"
      namedPipeConnectionRetryDelay="2000"
      maxNamedPipeConnectionPoolSize="512"
      maxNamedPipePooledConnectionAge="30000"
      initialRequestBufferSize="4096"
      maxRequestBufferSize="65536"
    />
    
    <!-- Static file caching and handling -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
      <mimeMap fileExtension=".webp" mimeType="image/webp" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Error handling -->
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>